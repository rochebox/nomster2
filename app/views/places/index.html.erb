<!-- code to display a listing of the places  from early Nomster lessons -->
<% @places.each do |place| %>
	<div class="booyah-box col-xs-8 col-xs-offset-2">
		<!-- h1 class="restaurant" -->
    <h1 class="restaurant-listing-styles" >
      <%= link_to place.name, place_path(place), :class => 'restaurant-link-styles' %></h1> 
		<i class="index-place nomster-text-font"><%= place.address %></i><br />
		<p class="index-description"><%= place.description %></p><br />

		 <% if place.user.present? %>
     		 <small class="index-description nomster-text-font"><%= place.user.email %></small>
   		 <% end %>
   		 <% if place.comments.present? %>
   		 	<div class="col-xs-12 ">
				  <blockquote class="sm-grow">
				  	
				    <% if place.comments.order("id ASC").last.humanized_rating.present? %>
				      <b><%= place.comments.order("id ASC").last.humanized_rating %></b> -
				    <% end %>
				   
				    <%= place.comments.order("id ASC").last.message %>
				   
				    <small><%= place.comments.order("id ASC").last.user.email %></small>
				  </blockquote>
			</div>
		<% end %>	
	</div>

	
<% end %>

<div class="col-xs-8 col-xs-offset-2 brand-font">
<%= will_paginate @places, renderer: BootstrapPagination::Rails %>
</div>